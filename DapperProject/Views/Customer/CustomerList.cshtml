@model List<DapperProject.Dtos.CustomerDtos.ResultCustomerDto>

@{
    Layout = null;
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h2 class="text-center mb-4">📋 Customer List <a href="/Customer/CreateCustomer/" class="btn btn-sm btn-outline-dark">Create</a></h2>
    

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var customer in Model)
            {
                <div class="col">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-person-circle"></i>
                                @customer.CustomerName @customer.CustomerSurname
                            </h5>
                            <p class="card-text">
                                <strong>ID:</strong> @customer.CustomerId <br />
                                <strong>Balance:</strong> ₺@customer.CustomerBalance.ToString("N2")
                            </p>
                        </div>
                        <div class="card-footer text-end bg-white border-0">
                            <a href="/Customer/UpdateCustomer/@customer.CustomerId" class="btn btn-sm btn-outline-primary">Update</a>
                        <a href="/Customer/DeleteCustomer/@customer.CustomerId" class="btn btn-sm btn-outline-primary">Delete</a>
                        </div>
                    </div>
                </div>
            }

        </div>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
