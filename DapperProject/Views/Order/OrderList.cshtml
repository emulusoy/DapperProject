@model List<DapperProject.Dtos.OrderDtos.ResultOrderWithCustomerDto>


@{
    Layout = null;
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="container mt-5">
    <h2 class="text-center mb-4">📦 Order List</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var order in Model)
            {
                <div class="col">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-box-seam"></i>
                                @order.ProductName
                            </h5>
                            <p class="card-text">
                                <strong>Order ID:</strong> @order.OrderId <br />
                                <strong>Price:</strong> ₺@order.ProductPrice.ToString("N2") <br />
                                <strong>Quantity:</strong> @order.ProductCount <br />
                                <strong>Customer ID:</strong> @order.CustomerName @order.CustomerSurname
                            </p>
                        </div>
                        <div class="card-footer text-end bg-white border-0">
                            <a href="/Order/UpdateOrder/@order.OrderId" class="btn btn-sm btn-outline-primary">Update</a>
                            <a href="/Order/DeleteOrder/@order.OrderId" class="btn btn-sm btn-outline-danger">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            No orders found.
        </div>
    }

    <div class="mt-4 text-center">
        <a href="/Order/CreateOrder" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Order
        </a>
    </div>
</div>
